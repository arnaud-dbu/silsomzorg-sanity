---
import { Icon } from "astro-icon/components";
import { urlFor } from "../utils/image";
const { hero } = Astro.props;
const imageUrl = urlFor(hero.image).url();
---

<section class="relative overflow-x-clip">
  <div class="rounded-edge relative h-screen flex items-end max-h-[55rem]">
    <div class="primary-overlay z-10"></div>
    <div class="gradient-overlay z-20"></div>
    <div class="text-white container mb-24 relative z-30">
      <div class="relative w-fit">
        <h1 class="text-[14rem] text-white font-medium w-fit">Silsomzorg</h1>
      </div>
      <p class="text-3xl w-1/2">
        {hero.description}
      </p>
    </div>
    <div
      style=`background-image: url("${imageUrl}");`
      class="absolute inset-0 bg-no-repeat bg-cover grayscale"
    >
    </div>
  </div>
  <Icon
    name="shape"
    class="absolute -bottom-[95%] left-1/2 -translate-x-1/2 w-[200rem] h-auto"
  />
</section>
