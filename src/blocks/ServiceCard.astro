---
import { Image } from "astro:assets";
import { srcSet, urlFor } from "../utils/image";
const { card } = Astro.props;

const imageUrl = card.pageHeader.image
  ? urlFor(card.pageHeader.image).url()
  : null;
---

<div
  class="@container hover:scale-[1.002] transition hover:shadow-lg relative rounded-2xl border-primary-600/50 border overflow-hidden"
>
  <div class="flex flex-col @lg:flex-row h-full">
    {
      imageUrl && (
        <Image
          srcset={imageUrl ? srcSet(imageUrl) : ""}
          width={1000}
          height={1000}
          src={imageUrl}
          alt="test"
          class="w-full aspect-video object-cover @lg:w-2/5"
        />
      )
    }
    <div
      class="p-6 bg-white sm:p-8 flex flex-col gap-2 lg:gap-4 @lg:w-fit h-full"
    >
      <h3 class="">{card.overviewTitle}</h3>
      <p class="text-lg">{card.overviewDescription}</p>
      <div class="mt-auto pt-4">
        <a
          class="btn btn--outline link--extended"
          href={`/aanbod/${card.slug.current}`}
        >
          Meer info
        </a>
      </div>
    </div>
  </div>
</div>
