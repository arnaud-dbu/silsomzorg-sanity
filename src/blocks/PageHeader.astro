---
import { Icon } from "astro-icon/components";
const { data } = Astro.props;
---

<div class="section section--half">
  <div class="bg-secondary-50/30 py-10 relative overflow-clip">
    <div class="container relative">
      <Icon
        class="absolute w-[100rem] h-[100rem] left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2"
        name="shape"
      />
      <div class="relative z-10 w-full lg:w-2/3 spacing-y">
        <h1>{data.title}</h1>
        {data.description && <p>{data.description}</p>}
      </div>
    </div>
  </div>
</div>
